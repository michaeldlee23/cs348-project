<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Show Teacher</title>
    <style type="text/css">
        section {
            border-bottom: 1px solid grey;
            padding-bottom: 10px;
        }

        section p:first-of-type>strong {
            color: rgb(2.8%, 11.1%, 47.6%);
        }

        section p:nth-of-type(2)>strong {
            color: rgb(29.1%, 30.8%, 38.2%);
        }
    </style>
</head>

<body>
<h2>Teacher Page</h2>



<form id="mainTeacherpg" action="/teachers/<%=id%>" method="POST" >

    <label for="password">password:</label>
    <input type="text" id="password" name="password"><br><br>

    <input type="submit" value="Submit">
</form>

<br />


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script>
    (function($){
        function processForm( e ){
            const data = new FormData(e.target);
            payload = Object.fromEntries(data.entries())
            $.ajax({
                url: '/teachers/<%=id%>',
                dataType: 'json',
                type: 'post',
                contentType: 'application/json',
                data: JSON.stringify(payload), 
                async:false,
                success: function(data, textStatus, jQxhr) {
                    window.location.href="/teachers/<%=id%>/info"
                },
                error: function(jqXhr, textStatus, errorThrown){
                    alert("Login Failed")
                    console.log(errorThrown);
                    console.log(payload);
                }
            });
           e.preventDefault();
        }
        $('#mainTeacherpg').submit( processForm );
        
    })(jQuery);
    
    

</script>
</body>
</html>